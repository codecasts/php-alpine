# Maintainer: "Diego Hernandes <iamhernandev@gmail.com>"

pkgname=php8-psr
srcdir="/tmp/src-$pkgname"
pkgbasedir="/tmp/pkg-$pkgname"
_pkgreal=psr
pkgver=1.1.0
pkgrel=1
_phpver=8
provides="php-psr=8.1"
pkgdesc="PSR - PHP extension providing the accepted PSR interfaces"
url="https://github.com/jbboehr/php-psr"
arch="all"
license="PHP-3"
depends="php8-common>=8.1.0 php8-common<8.2.0"
makedepends="php8-dev>=8.1.0 php8-dev<8.2.0 autoconf pcre-dev"
source="php8-psr.tar.gz::https://github.com/jbboehr/php-psr/archive/v$pkgver.tar.gz"
builddir="$srcdir/php-$_pkgreal-$pkgver"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$builddir"
	phpize$_phpver || return 1
	./configure --prefix=/usr \
	    --with-php-config=/usr/bin/php-config$_phpver || return 1
    TEST_PHP_ARGS="-q" make test
    make
}

package() {
	mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$builddir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php$_phpver/conf.d || return 1
    echo "extension=$_pkgreal" > "$pkgdir"/etc/php$_phpver/conf.d/00_$_pkgreal.ini || return 1
}

sha512sums="d6d733c2dd3c69285e2994682ad2693f24aab291887ac0ec274b633aba3fae23e654dc1c89c29db980500e5ade1ad49d932e13533cea620cbce870b7093b54a7  php8-psr.tar.gz"
