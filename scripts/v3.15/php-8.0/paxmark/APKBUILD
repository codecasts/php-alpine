pkgname=paxmark
pkgver=0.12
pkgrel=0
pkgdesc="Manage PaX marking of executables"
url="https://alpinelinux.org"
arch="noarch"
options="!check"
license="GPL-2.0-or-later"
depends="attr"
source="paxmark"

package() {
	mkdir -p "$pkgdir"/usr/sbin
	install -m755 "$srcdir"/paxmark "$pkgdir"/usr/sbin
	ln -s paxmark "$pkgdir"/usr/sbin/paxmark.sh
}

sha512sums="
