# Maintainer: "Diego Hernandes <iamhernandev@gmail.com>"

pkgname=php8-imagick
srcdir="/tmp/src-$pkgname"
pkgbasedir="/tmp/pkg-$pkgname"
_pkgreal=imagick
pkgver=3.5.0
pkgrel=99
_phpver=8
provides="php-imagick=8.1"
pkgdesc="ImageMagick extension for PHP"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="PHP-3"
depends="php8-common>=8.1.0 php8-common<8.2.0 imagemagick"
makedepends="php8-dev>=8.1.0 php8-dev<8.2.0 autoconf imagemagick-dev libtool pcre2-dev"
#source="http://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
source="$_pkgreal-$pkgver.zip::https://github.com/Imagick/imagick/archive/refs/tags/$pkgver.zip"
builddir="$srcdir/$_pkgreal-$pkgver"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$builddir"
	phpize$_phpver || return 1
	./configure --prefix=/usr \
	    --with-php-config=/usr/bin/php-config$_phpver || return 1
    make || return 1
}

package() {
	mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$builddir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php$_phpver/conf.d || return 1
    echo "extension=$_pkgreal" > "$pkgdir"/etc/php$_phpver/conf.d/00_$_pkgreal.ini || return 1
}

sha512sums="c8a4b49dbc9d6988086bc084f6897258faf19bc1b6bc7bb72e6f91e555d62632ab2cfe89ae2582a9823f12dcc4896d987da37e3baf403d50e4cd19d72348f204  imagick-3.5.0.zip"
